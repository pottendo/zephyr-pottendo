/dts-v1/;

#include <riscv32-SMP-RVCop64.dtsi>

/ {
	model = "LiteX Orangecart";
	compatible = "litex,vexriscv";
	chosen {
		zephyr,console = &liteuart0;
		zephyr,shell-uart = &liteuart0;
		zephyr,sram = &ram0;
		zephyr,uart-pipe = &liteuart1;
		/* zephyr,gdbstub-uart = &uart0; */
	};

	ram0: memory@40000000 {
		device_type = "memory";
		reg = <0x40000000 0x10000000>;
	};
};

&liteuart0 {
	status = "okay";
	current-speed = <115200>;
};

&liteuart1 {
	status = "okay";
	current-speed = <115200>;
	gsm: gsm-modem {
		compatible = "zephyr,gsm-ppp";
		status="okay";
	};			
};

&mailbox {
	status = "okay";
};

&spi0 {
	status = "okay";
};

&leds {
	litex,ngpio = <4>;
	status = "okay";
};

